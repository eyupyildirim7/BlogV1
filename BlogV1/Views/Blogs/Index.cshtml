@model List<Blog>


<div class="mainbar">
    @foreach (var item in Model)
    {
        <div class="article">
            <h2><span>@item.Name</span> </h2>
            <div class="clr"></div>
            <p><span class="date">@item.publisDate.ToString("dd/MM/yyyy HH.mm ")</span>  &nbsp;|&nbsp; Etiketler <a href="#">@item.Tags</a> </p>
            <img src="@item.Imageurl" width="625" height="205" alt="" />
            @{
                string description = item.Description;
                string newdescription= description.Length>50 ? description.Substring(0,250) +"...." : description;
            }
        <p>@newdescription</p>
            <p class="spec">
                <a href="/Blogs/Details?id=@item.Id" class="rm">Daha Fazla Oku &raquo;</a>
            <a href="#" class="com" style="margin-left:5px;"><span>@item.CommentCount</span> Yorum</a>
                <a href="#" class="com" style="margin-left:5px;"><span>@item.LikeCount</span> Begeni</a>
                <a href="#" class="com" style="margin-left:5px;"><span>@item.ViewCount</span> Goruntulenme</a>
            </p>
    </div> }
</div>